<div class="container">
  <div class="col-xs-4 col-xs-offset-4">
    <%= simple_form_for(@restaurant) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :phone_number %>
        <%= f.input :category %>
      </div>
      <div class="form-actions">
        <%= f.button :submit %>
      </div>

    <% end %>
  </div>
</div>

